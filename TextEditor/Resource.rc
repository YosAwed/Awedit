// Resource.rc - リソーススクリプト
#pragma code_page(65001)  // UTF-8
#include <windows.h>

// メニュー
#define IDR_MAINMENU                    102

// メニューアイテム - ファイル
#define ID_FILE_NEW                     1001
#define ID_FILE_OPEN                    1002
#define ID_FILE_SAVE                    1003
#define ID_FILE_SAVEAS                  1004
#define ID_FILE_EXIT                    1005

// メニューアイテム - 編集
#define ID_EDIT_UNDO                    2001
#define ID_EDIT_REDO                    2002
#define ID_EDIT_CUT                     2003
#define ID_EDIT_COPY                    2004
#define ID_EDIT_PASTE                   2005
#define ID_EDIT_SELECTALL               2006

// メニューアイテム - 検索
#define ID_SEARCH_FIND                  3001
#define ID_SEARCH_REPLACE               3002
#define ID_SEARCH_FINDNEXT              3003
#define ID_SEARCH_FINDPREVIOUS          3004

// メニューアイテム - ヘルプ
#define ID_HELP_CONTENTS                4001
#define ID_HELP_ABOUT                   4002

// メニュー定義
IDR_MAINMENU MENU
BEGIN
    POPUP "ファイル(&F)"
    BEGIN
        MENUITEM "新規作成(&N)\tCtrl+N", ID_FILE_NEW
        MENUITEM "開く(&O)...\tCtrl+O", ID_FILE_OPEN
        MENUITEM "保存(&S)\tCtrl+S", ID_FILE_SAVE
        MENUITEM "名前を付けて保存(&A)...", ID_FILE_SAVEAS
        MENUITEM SEPARATOR
        MENUITEM "終了(&X)", ID_FILE_EXIT
    END
    POPUP "編集(&E)"
    BEGIN
        MENUITEM "元に戻す(&U)\tCtrl+Z", ID_EDIT_UNDO
        MENUITEM "やり直し(&R)\tCtrl+Y", ID_EDIT_REDO
        MENUITEM SEPARATOR
        MENUITEM "切り取り(&T)\tCtrl+X", ID_EDIT_CUT
        MENUITEM "コピー(&C)\tCtrl+C", ID_EDIT_COPY
        MENUITEM "貼り付け(&P)\tCtrl+V", ID_EDIT_PASTE
        MENUITEM SEPARATOR
        MENUITEM "すべて選択(&A)\tCtrl+A", ID_EDIT_SELECTALL
    END
    POPUP "検索(&S)"
    BEGIN
        MENUITEM "検索(&F)...\tCtrl+F", ID_SEARCH_FIND
        MENUITEM "置換(&R)...\tCtrl+H", ID_SEARCH_REPLACE
        MENUITEM SEPARATOR
        MENUITEM "次を検索(&N)\tF3", ID_SEARCH_FINDNEXT
        MENUITEM "前を検索(&P)\tShift+F3", ID_SEARCH_FINDPREVIOUS
    END
    POPUP "ヘルプ(&H)"
    BEGIN
        MENUITEM "ヘルプ(&H)\tF1", ID_HELP_CONTENTS
        MENUITEM SEPARATOR
        MENUITEM "バージョン情報(&A)...", ID_HELP_ABOUT
    END
END

// アイコン（実際のアイコンファイルがない場合はデフォルト）
// IDI_APPLICATION ICON "icon.ico"

// ダイアログID（Resource.hと一致）
#define IDD_SEARCH_DIALOG               6001
#define IDD_REPLACE_DIALOG              6002
#define IDC_SEARCH_TEXT                 6101
#define IDC_REPLACE_TEXT                6102
#define IDC_CHECK_CASE                  6103
#define IDC_CHECK_WHOLEWORD             6104
#define IDC_CHECK_REGEX                 6105
#define IDC_BTN_FINDNEXT                6106
#define IDC_BTN_FINDPREV                6107
#define IDC_BTN_REPLACE                 6108
#define IDC_BTN_REPLACEALL              6109
#define IDC_STATIC_SEARCHLABEL          6110
#define IDC_STATIC_REPLACELABEL         6111

// 検索ダイアログ
IDD_SEARCH_DIALOG DIALOGEX 0, 0, 280, 95
STYLE DS_SETFONT | DS_MODALFRAME | DS_FIXEDSYS | WS_POPUP | WS_CAPTION | WS_SYSMENU
CAPTION "検索"
FONT 9, "Yu Gothic UI", 400, 0, 0x80
BEGIN
    LTEXT           "検索する文字列(&N):", IDC_STATIC_SEARCHLABEL, 7, 10, 70, 8
    EDITTEXT        IDC_SEARCH_TEXT, 80, 7, 130, 14, ES_AUTOHSCROLL
    DEFPUSHBUTTON   "次を検索(&F)", IDC_BTN_FINDNEXT, 218, 7, 55, 14
    PUSHBUTTON      "前を検索(&P)", IDC_BTN_FINDPREV, 218, 24, 55, 14
    CONTROL         "大文字と小文字を区別(&C)", IDC_CHECK_CASE, "Button", BS_AUTOCHECKBOX | WS_TABSTOP, 7, 30, 100, 10
    CONTROL         "単語単位で検索(&W)", IDC_CHECK_WHOLEWORD, "Button", BS_AUTOCHECKBOX | WS_TABSTOP, 7, 45, 85, 10
    CONTROL         "正規表現(&E)", IDC_CHECK_REGEX, "Button", BS_AUTOCHECKBOX | WS_TABSTOP, 7, 60, 60, 10
    PUSHBUTTON      "閉じる", IDCANCEL, 218, 74, 55, 14
END

// 置換ダイアログ
IDD_REPLACE_DIALOG DIALOGEX 0, 0, 280, 120
STYLE DS_SETFONT | DS_MODALFRAME | DS_FIXEDSYS | WS_POPUP | WS_CAPTION | WS_SYSMENU
CAPTION "置換"
FONT 9, "Yu Gothic UI", 400, 0, 0x80
BEGIN
    LTEXT           "検索する文字列(&N):", IDC_STATIC_SEARCHLABEL, 7, 10, 70, 8
    EDITTEXT        IDC_SEARCH_TEXT, 80, 7, 130, 14, ES_AUTOHSCROLL
    LTEXT           "置換後の文字列(&P):", IDC_STATIC_REPLACELABEL, 7, 28, 70, 8
    EDITTEXT        IDC_REPLACE_TEXT, 80, 25, 130, 14, ES_AUTOHSCROLL
    DEFPUSHBUTTON   "次を検索(&F)", IDC_BTN_FINDNEXT, 218, 7, 55, 14
    PUSHBUTTON      "置換(&R)", IDC_BTN_REPLACE, 218, 24, 55, 14
    PUSHBUTTON      "すべて置換(&A)", IDC_BTN_REPLACEALL, 218, 41, 55, 14
    CONTROL         "大文字と小文字を区別(&C)", IDC_CHECK_CASE, "Button", BS_AUTOCHECKBOX | WS_TABSTOP, 7, 50, 100, 10
    CONTROL         "単語単位で検索(&W)", IDC_CHECK_WHOLEWORD, "Button", BS_AUTOCHECKBOX | WS_TABSTOP, 7, 65, 85, 10
    CONTROL         "正規表現(&E)", IDC_CHECK_REGEX, "Button", BS_AUTOCHECKBOX | WS_TABSTOP, 7, 80, 60, 10
    PUSHBUTTON      "閉じる", IDCANCEL, 218, 99, 55, 14
END

